{
	"name": "laravel/laravel",
	"description": "The Laravel Framework.",
	"keywords": ["framework", "laravel"],
	"license": "MIT",
	"type": "project",
	"require": {
		"laravel/framework": "5.1.*",
	  "greggilbert/recaptcha": "dev-master",
		"illuminate/html" : "5.*",
	  "cartalyst/sentinel": "2.0.*",
	  "cartalyst/sentinel-social": "2.0.*",
		"pingpong/modules": "^2.1",
		"maatwebsite/excel": "~2.0.0",
                "athari/yalinqo": "~2.0",
		"larapack/config-writer": "1.*",

	  "cartalyst/support": "~1.0",
	  "league/oauth1-client": "1.2.*",
	  "league/oauth2-client": "0.12.*",
		"appzcoder/crud-generator": "^1.0"

	},
	"require-dev": {
	  "illuminate/database": "~5.0",
	  "illuminate/events": "~5.0",
	  "mockery/mockery": "~0.9",
		"phpunit/phpunit": "~4.0",
		"phpspec/phpspec": "~2.1"
	},
	"repositories": [
	  {
		"type": "package",
		"package": {
		  "name": "cartalyst/sentinel-social",
		  "version": "2.0.0",
		  "dist": {
			"type": "zip",
			"url": "http://mqplanet.com/sentinel-social-2.0.zip",
			"reference": "2.0.0"
		  },
		  "autoload": {
			"classmap": ["."]
		  }
		}
	  }

	],
	"autoload": {
		"classmap": [
			"database"
		],
		"psr-4": {
			"Fxweb\\": "app/",
		  "Modules\\": "modules/",
		  "modules\\": "modules/"
		},
		"files": [
			"app/helpers.php"
		]
	},
	"autoload-dev": {
		"classmap": [
			"tests/TestCase.php"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php -r \"copy('.env.example', '.env');\"",
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist",
	  	"secure-http": false
	}
}
